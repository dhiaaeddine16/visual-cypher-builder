{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // Allow 'any' type, which might prevent TS2322
    "noImplicitThis": false, // Allow 'this' to have an implicit 'any'
    "strictNullChecks": false, // Relax checks for null and undefined
    "strictFunctionTypes": false, // Allow function parameter type mismatch
  },
  "include": ["src"]
}
